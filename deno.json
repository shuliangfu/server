{
  "name": "@dreamer/server",
  "version": "1.0.0-beta.6",
  "license": "MIT",
  "exports": {
    ".": "./src/mod.ts"
  },
  "publish": {
    "include": [
      "src/**/*.ts",
      "LICENSE.md",
      "README.md",
      "TEST_REPORT.md"
    ],
    "exclude": [
      "**/*.test.ts",
      "**/*.spec.ts",
      "**/test/**",
      "**/tests/**"
    ]
  },
  "imports": {
    "@dreamer/console": "jsr:@dreamer/console@^1.0.2",
    "@dreamer/render": "jsr:@dreamer/render@^1.0.0-beta.8",
    "@dreamer/middleware": "jsr:@dreamer/middleware@^1.0.0-beta.2",
    "@dreamer/router": "jsr:@dreamer/router@^1.0.0-beta.3",
    "@dreamer/runtime-adapter": "jsr:@dreamer/runtime-adapter@^1.0.0-beta.22",
    "@dreamer/logger": "jsr:@dreamer/logger@^1.0.0-beta.7",
    "@dreamer/test": "jsr:@dreamer/test@^1.0.0-beta.40",
    "brotli": "npm:brotli@1.3.3",
    "pako": "npm:pako@2.1.0",
    "react": "npm:react@^18.3.1",
    "react-dom/server": "npm:react-dom@^18.3.1/server",
    "react-dom/client": "npm:react-dom@^18.3.1/client",
    "vue": "npm:vue@^3.4.27",
    "@vue/server-renderer": "npm:@vue/server-renderer@^3.4.27",
    "esbuild": "npm:esbuild@^0.24.2",
    "preact": "npm:preact@^10.28.2",
    "preact-render-to-string": "npm:preact-render-to-string@^6.6.5"
  },
  "lint": {
    "include": [
      "src/"
    ],
    "rules": {
      "tags": [
        "recommended"
      ],
      "exclude": [
        "no-explicit-any"
      ]
    }
  },
  "nodeModulesDir": "auto",
  "compilerOptions": {
    "lib": [
      "deno.window",
      "dom",
      "dom.iterable"
    ]
  }
}
