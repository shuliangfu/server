{
  "name": "@dreamer/server",
  "version": "1.0.1",
  "license": "MIT",
  "exports": {
    ".": "./src/mod.ts"
  },
  "publish": {
    "include": [
      "src/**/*.ts",
      "LICENSE.md",
      "README.md",
      "TEST_REPORT.md"
    ],
    "exclude": [
      "**/*.test.ts",
      "**/*.spec.ts",
      "**/test/**",
      "**/tests/**"
    ]
  },
  "imports": {
    "@dreamer/console": "jsr:@dreamer/console@^1.0.3",
    "@dreamer/render": "jsr:@dreamer/render@^1.0.0",
    "@dreamer/middleware": "jsr:@dreamer/middleware@^1.0.0",
    "@dreamer/router": "jsr:@dreamer/router@^1.0.0",
    "@dreamer/runtime-adapter": "jsr:@dreamer/runtime-adapter@^1.0.0",
    "@dreamer/logger": "jsr:@dreamer/logger@^1.0.0",
    "@dreamer/test": "jsr:@dreamer/test@^1.0.0",
    "@dreamer/esbuild": "jsr:@dreamer/esbuild@^1.0.0"
  },
  "lint": {
    "include": [
      "src/"
    ],
    "rules": {
      "tags": [
        "recommended"
      ],
      "exclude": [
        "no-explicit-any"
      ]
    }
  },
  "nodeModulesDir": "auto",
  "compilerOptions": {
    "lib": [
      "deno.window",
      "dom",
      "dom.iterable"
    ]
  }
}
